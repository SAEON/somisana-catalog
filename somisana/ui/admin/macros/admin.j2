{% macro data_table(
    json_data,
    key_map,
    url_key='id',
    url_param='id',
    url='.index'
) %}
    <table class="table">
        <thead>
        <tr>
            {% for key, label in key_map.items() %}
                <th>{{ label }}</th>
            {% endfor %}
        </tr>
        </thead>
        <tbody>
        {% if not json_data|length > 0 %}
            <tr>
                <td class="text-center" colspan="{{ key_map.items()|length }}">
                    No results found
                </td>
            </tr>
        {% else %}
            {% for item in json_data %}
                <tr>
                    {% for key in key_map.keys() %}
                        {% if key == url_key %}
                            <td>
                                <a href="{{ url_for(url, **{url_param: item[key]}) }}">{{ item[key] }}</a>
                            </td>
                        {% else %}
                            <td>{{ item[key] }}</td>
                        {% endif %}
                    {% endfor %}
                </tr>
            {% endfor %}
        {% endif %}
        </tbody>
    </table>
{% endmacro %}