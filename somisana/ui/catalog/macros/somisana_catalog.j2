                <a class="nav-link" href="https://somisana.ac.za/" target="_blank">SOMISANA</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ url_for('catalog.index') }}">Home</a>
            </li>
        </ul>
